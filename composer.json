{
    "name": "peptolab/benchpress",
    "description": "A configurable PHP benchmarking harness suite",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpbench/phpbench": "^1.3",
        "laminas/laminas-coding-standard": "^3.0.1",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpunit/phpunit": "^11.5.15"
    },
    "autoload": {
        "psr-4": {
            "Benchpress\\": "benchmarks/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BenchpressTest\\": "tests/"
        }
    },
    "scripts": {
        "setup": "php bin/setup",
        "bench": "phpbench run --report=compare",
        "bench:store": "phpbench run --tag=latest --report=compare",
        "bench:compare": "phpbench run --ref=latest --report=compare",
        "report": "php bin/report",
        "report:md": "php bin/report --format=md",
        "report:csv": "php bin/report --format=csv",
        "report:json": "php bin/report --format=json",
        "clean": "rm -rf subjects/ .phpbench/storage/ reports/*.md reports/*.csv reports/*.html",
        "check": [
            "@cs-check",
            "@static-analysis"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always --testsuite \"unit test\"",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "test-integration": "phpunit --colors=always --testsuite \"integration test\"",
        "static-analysis": "vendor/bin/phpstan analyse --memory-limit=256M",
        "sa-generate-baseline": "vendor/bin/phpstan analyse --memory-limit=256M --generate-baseline",
        "upload-coverage": "coveralls -v"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
